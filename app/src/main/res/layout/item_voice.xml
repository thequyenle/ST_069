<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutVoiceItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/frame_language_uncheck"
        android:padding="12dp">

        <!-- Voice Icon (Music Note) -->
        <ImageView
            android:id="@+id/ivVoiceIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_music"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Voice Name -->
        <TextView
            android:id="@+id/tvVoiceName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/roboto"
            android:text="Mom"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/ivVoiceIcon"
            app:layout_constraintTop_toTopOf="@id/ivVoiceIcon"
            app:layout_constraintEnd_toStartOf="@id/radioButton" />

        <!-- Duration -->
        <TextView
            android:id="@+id/tvDuration"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/roboto"
            android:text="00:02"
            android:textColor="#666666"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/tvVoiceName"
            app:layout_constraintTop_toBottomOf="@id/tvVoiceName" />

        <!-- Radio Button (Selection Indicator) -->
        <ImageView
            android:id="@+id/radioButton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_language_unchecked"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>