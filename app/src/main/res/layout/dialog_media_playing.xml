<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:padding="24dp"
    android:background="@drawable/bg_rounded_corners_white">

    <!-- Voice Name -->
    <TextView
        android:id="@+id/tvVoiceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mom"
        android:textSize="18sp"
        android:fontFamily="@font/roboto"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Music Icon -->
    <ImageView
        android:id="@+id/ivMusicIcon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_music"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvVoiceName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Progress Bar -->
    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:progressTint="#2196F3"
        android:thumbTint="#2196F3"
        app:layout_constraintTop_toBottomOf="@id/ivMusicIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Time Display -->
    <LinearLayout
        android:id="@+id/layoutTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/seekBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvCurrentTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="00:00"
            android:textSize="12sp"
            android:fontFamily="@font/roboto"
            android:textColor="#666666" />

        <TextView
            android:id="@+id/tvTotalTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:02"
            android:textSize="12sp"
            android:fontFamily="@font/roboto"
            android:textColor="#666666" />
    </LinearLayout>

    <!-- Play/Pause Button -->
    <ImageButton
        android:id="@+id/btnPlayPause"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_start_voice"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/layoutTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Close Button -->
    <TextView
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        android:textSize="14sp"
        android:fontFamily="@font/roboto"
        android:textColor="#2196F3"
        android:padding="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnPlayPause"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>